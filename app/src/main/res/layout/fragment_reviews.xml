            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date3"
            android:text="0000-00-00"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    </LinearLayout>


</FrameLayout>